# Raddir Server Configuration

# Server
RADDIR_HOST=0.0.0.0
RADDIR_PORT=4000

# MediaSoup RTC
RADDIR_RTC_MIN_PORT=40000
RADDIR_RTC_MAX_PORT=49999
RADDIR_ANNOUNCED_IP=

# Database
RADDIR_DB_PATH=./data/raddir.db

# Security
RADDIR_ADMIN_TOKEN=
# Server password (leave empty for no password)
RADDIR_PASSWORD=
# Set to "true" to allow admin API without a token (NOT recommended for public servers)
RADDIR_OPEN_ADMIN=false

# TLS â€” server always runs HTTPS
# Mode: "selfsigned" (default, auto-generated), "letsencrypt", or "custom"
RADDIR_TLS_MODE=selfsigned
# Let's Encrypt: requires a domain pointing to this server and port 80 open for ACME challenge
RADDIR_TLS_DOMAIN=
RADDIR_TLS_EMAIL=
# Custom: paths to your own PEM cert and key files
RADDIR_TLS_CERT=
RADDIR_TLS_KEY=

# Logging
RADDIR_LOG_LEVEL=info
